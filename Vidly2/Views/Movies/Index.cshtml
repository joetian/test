@model IEnumerable<Vidly2.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

    <a class="btn btn-default btn-lg" href="~/Movies/New">New Movie</a>

<table class="table">
    <tr><th>Movie </th><th>Genre</th><th>Copies in stock</th></tr>

    @foreach (var movie in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(movie.Name, "Edit", new { id = movie.Id }, null)
            </td>
            <td> @movie.Genre.Name</td>
            <td> @movie.NumberInStock</td>
        </tr>
    }
</table>

